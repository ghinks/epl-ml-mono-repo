{
  "name": "@gvhinks/epl-data-reader",
  "version": "1.7.0",
  "description": "read data from json files with EPL match results",
  "main": "dist/index.js",
  "repository": {
    "url": "https://github.com/ghinks/epl-ml-mono-repo.git",
    "type": "git"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "cross-env NODE_ENV=test jest src",
    "lint": "eslint \"src/**/*.ts\"",
    "copyData": "cp -r data ./dist/",
    "postbuild": "babel dist --out-dir dist --extensions \".js\" --verbose && npm run copyData",
    "pretty": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "tags"
  ],
  "author": "ghinks@yahoo.com",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.6.2",
    "@babel/core": "7.6.2",
    "@babel/plugin-transform-regenerator": "7.4.5",
    "@babel/plugin-transform-runtime": "7.6.2",
    "@babel/preset-env": "7.6.2",
    "@babel/preset-typescript": "7.6.0",
    "@babel/register": "7.6.2",
    "@types/node": "11.13.22",
    "@typescript-eslint/eslint-plugin": "2.2.0",
    "@typescript-eslint/parser": "2.2.0",
    "cross-env": "5.2.1",
    "eslint": "6.5.1",
    "jest": "24.9.0",
    "prettier": "1.17.1",
    "rimraf": "3.0.0",
    "ts-jest": "24.1.0",
    "typescript": "3.6.3"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@babel/runtime": "^7.3.1",
    "@gvhinks/epl-common-interfaces": "^1.7.0",
    "@gvhinks/epl-constants": "^1.7.0",
    "@gvhinks/epl-season-forecast": "^1.7.0",
    "@gvhinks/epl-utilities": "^1.7.0",
    "csvtojson": "^2.0.10"
  },
  "babel": {
    "include": [
      "src/**/*.ts"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "10.0.0"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ],
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-runtime"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/ban-ts-ignore": [
        "off"
      ]
    },
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "node": true,
      "jest": true,
      "mocha": true
    }
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts"
    ],
    "report": [
      "json",
      "lcov",
      "html",
      "text"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "testMatch": [
      "**/*.test.ts"
    ],
    "testEnvironment": "node",
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  }
}
