{
  "name": "@gvhinks/epl-data-to-db",
  "version": "1.0.6",
  "description": "take EPL match results and write to a DB",
  "main": "dist/index.js",
  "repository": {
    "url": "https://github.com/ghinks/epl-ml-mono-repo.git",
    "type": "git"
  },
  "scripts": {
    "clean": "rimraf dist && rimraf definitions",
    "build": "babel src --out-dir dist --extensions \".ts\" --ignore \"src/**/*.spec.ts\",\"src/**/*.test.ts\"",
    "build:watch": "babel --watch src --out-dir dist --extensions \".ts\" --ignore \"src/**/*.spec.ts\",\"src/**/*.test.ts\"",
    "postbuild": "tsc --emitDeclarationOnly --outDir definitions && cp definitions/index.d.ts dist/",
    "test": "cross-env NODE_ENV=test jest src",
    "lint": "eslint \"src/**/*.ts\"",
    "pretty": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "tags"
  ],
  "author": "ghinks@yahoo.com",
  "license": "Unlicense",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-regenerator": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@types/node": "^11.12.2",
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "@typescript-eslint/parser": "^1.3.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.13.0",
    "jest": "^24.1.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@babel/runtime": "^7.3.1",
    "@gvhinks/epl-data-reader": "^1.0.6",
    "mongodb": "^3.1.13"
  },
  "babel": {
    "include": [
      "src/**/*.ts"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "10.0.0"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ],
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-runtime"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/indent": [
        "error",
        2
      ]
    },
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "node": true,
      "jest": true,
      "mocha": true
    }
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts"
    ],
    "report": [
      "json",
      "lcov",
      "html",
      "text"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "testMatch": [
      "**/*.test.ts"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "testEnvironment": "node"
  }
}
