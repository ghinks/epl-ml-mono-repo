{
  "name": "@gvhinks/epl-utilities",
  "version": "1.6.0",
  "description": "utilities used for EPL model testing",
  "keywords": [
    "epl",
    "monorepo",
    "tensorflow"
  ],
  "author": "Glenn Hinks <ghinks@yahoo.com>",
  "homepage": "https://github.com/ghinks/epl-ml-mono-repo#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ghinks/epl-ml-mono-repo.git"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "cross-env NODE_ENV=test jest src",
    "lint": "eslint \"src/**/*.ts\"",
    "postbuild": "babel dist --out-dir dist --extensions \".js\" --verbose",
    "pretty": "prettier --write src/**/*.ts"
  },
  "devDependencies": {
    "@babel/cli": "7.6.0",
    "@babel/core": "7.6.0",
    "@babel/plugin-transform-regenerator": "7.4.5",
    "@babel/plugin-transform-runtime": "7.6.0",
    "@babel/preset-env": "7.6.0",
    "@babel/preset-typescript": "7.6.0",
    "@babel/register": "7.6.0",
    "@types/node": "11.13.20",
    "@typescript-eslint/eslint-plugin": "2.0.0",
    "@typescript-eslint/parser": "2.0.0",
    "cross-env": "5.2.1",
    "eslint": "6.3.0",
    "jest": "24.9.0",
    "prettier": "1.17.1",
    "rimraf": "3.0.0",
    "ts-jest": "24.0.2",
    "typescript": "3.5.3"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@babel/runtime": "^7.3.1",
    "@gvhinks/epl-common-interfaces": "^1.6.0",
    "@gvhinks/epl-constants": "^1.6.0",
    "@tensorflow/tfjs": "1.2.8"
  },
  "babel": {
    "include": [
      "src/**/*.ts"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "chrome": "58"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ],
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-runtime"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/ban-ts-ignore": [
        "off"
      ]
    },
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "node": true,
      "jest": true
    }
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts"
    ],
    "report": [
      "json",
      "lcov",
      "html",
      "text"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "testMatch": [
      "**/*.test.ts"
    ],
    "testEnvironment": "node",
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  }
}
